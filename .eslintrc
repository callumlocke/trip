parser: 'babel-eslint'
ecmaFeatures:
  modules: true
env:
  es6: true
  node: true
rules:
  comma-dangle: [2, 'always-multiline']
  curly: [2, 'multi-line']
  new-cap: 0
  no-lone-blocks: 0
  no-multi-spaces: 0
  no-underscore-dangle: 0
  no-use-before-define: 0
  no-var: 2
  quotes: [2, 'single']
  semi: 2
